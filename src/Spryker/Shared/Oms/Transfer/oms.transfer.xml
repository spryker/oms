<?xml version="1.0"?>
<transfers xmlns="spryker:transfer-01"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="spryker:transfer-01 http://static.spryker.com/transfer-01.xsd">

    <transfer name="ItemState">
        <property name="idSalesOrder" type="int"/>
        <property name="name" type="string"/>
        <property name="createdAt" type="string"/>
    </transfer>

    <transfer name="Mail">
        <property name="order" type="Order"/>
    </transfer>

    <transfer name="Order">
        <property name="locale" type="Locale"/>
    </transfer>

    <transfer name="OmsAvailabilityReservationRequest">
        <property name="sku" type="string"/>
        <property name="reservationAmount" type="int"/>
        <property name="originStore" type="Store"/>
        <property name="synchronizeToStore" type="Store"/>
        <property name="version" type="string"/>
    </transfer>

    <transfer name="OmsStateCollection">
        <property name="states" type="OmsState[]" associative="true" singular="state"
                  description="State name is used as a key"/>
    </transfer>

    <transfer name="OmsState">
        <property name="name" type="string"/>
        <property name="processes" type="OmsProcess[]" associative="true" singular="process"
                  description="Process name is used as a key"/>
    </transfer>

    <transfer name="OmsProcess">
        <property name="name" type="string"/>
    </transfer>

    <transfer name="SalesOrderItemStateAggregation">
        <property name="sku" type="string"/>
        <property name="processName" type="string"/>
        <property name="stateName" type="string"/>
        <property name="sumAmount" type="int"/>
    </transfer>

</transfers>

